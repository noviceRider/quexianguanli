<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8">
<title>Insert title here</title>
<link rel="stylesheet" type="text/css" href="../../../../css/common/main.css" />
<link rel="stylesheet" type="text/css" href="../../../../css/themes/default/easyui.css">
<link rel="stylesheet" type="text/css" href="../../../../css/themes/icon.css">
<script type="text/javascript" src="../../../../js/jquery.min.js"></script>
<script type="text/javascript" src="../../../../js/jquery.easyui.min.js"></script>
<script type="text/javascript" src="../../../../js/common.js"></script>
<script type="text/javascript" src="js/member.js"></script>
<style type="text/css">
	.datagrid-btable .datagrid-cell{padding:4px 4px;overflow: hidden;text-overflow:ellipsis;white-space: nowrap;} 
	a{
		color: blue;
	}
</style>
</head>
<body>
	<table class='btbHead'>
		<tr>
			<td style='width: 25%;'>
				<img src='../../../../images/common/title.gif' align='absmiddle'/> 成员管理
			</td>
			<td style='text-align: right;'>
				<a class="easyui-linkbutton" iconCls="icon-add" onclick="addMember();">&nbsp;增加角色&nbsp;</a>
				<a class="easyui-linkbutton" iconCls="icon-remove" onclick="removeMember();">&nbsp;删&nbsp;&nbsp;除&nbsp;</a>
				<a class="easyui-linkbutton" iconCls="icon-edit" onclick="modifyMember();">&nbsp;编&nbsp;&nbsp;辑&nbsp;</a>
			</td>
		</tr>
	</table>
	<!-- 查询表单 -->
	<form id="tb">
		<table class="btbForm">
			<tr>
				<td>
					<input type="hidden" id="pId" name="pId" value="" />
				</td>
			</tr>
		</table>
	</form>
	<div style="margin:5px 0;"></div>
	<!-- 程度列表 -->
		<table class="easyui-datagrid" id="memberTable"
		data-options="fitColumns:true,
		autoRowHeight:true,
		striped:true,
		loadMsg:'正在加载数据中，请等待！',
		toolbar:'#tb'"
		style="width:100%;">
		<thead>   
        	<tr> 
            	<th data-options="field:'roleName',align:'center',width:'35%'">角色</th>
            	<th data-options="field:'concat',align:'center',width:'65%'">姓名</th>   
        	</tr> 
   		</thead>   
	</table>
	<!-- 增加的容器 -->
	<div id="addMemberContainer"></div>
	<!-- 编辑的容器 -->
	<div id="modifyMemberContainer"></div>
	<!-- 增加员工面板 -->
	<div id="addMemberUserContainer"></div>
</body>
</html>